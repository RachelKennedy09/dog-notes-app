<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Meta tags -->
    <meta charset="UTF-8">
    <title>Dog Walk Report</title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <!-- Sitewide header -->
    <%- include('../partials/_header') %>

        <div class="container">
            <h1>Submit a Dog Walk Report</h1>

            <!-- Error message block -->
            <% if (messages.error.length> 0) { %>
                <div class="error">
                    <ul>
                        <% messages.error.forEach(msg=> { %>
                            <li>
                                <%= msg %>
                            </li>
                            <% }) %>
                    </ul>
                </div>
                <% } %>

                    <!-- Success message block -->
                    <% if (messages.success.length> 0) { %>
                        <div class="success">
                            <% messages.success.forEach(msg=> { %>
                                <p>
                                    <%= msg %>
                                </p>
                                <% }) %>
                        </div>
                        <% } %>

                            <!-- Optional general message (e.g. ?message=...) -->
                            <% if (message) { %>
                                <p class="message">
                                    <%= message %>
                                </p>
                                <% } %>

                                    <!-- NEW NOTE FORM -->
                                    <form action="/notes" method="POST" class="note-form">
                                        <!-- Weather input -->
                                        <label for="weather">Weather:</label>
                                        <input type="text" id="weather" name="weather" required
                                            placeholder="e.g. Sunny, Windy, Light Rain" /><br><br>

                                        <!-- Incidents textarea -->
                                        <label for="incidents">Incidents:</label>
                                        <textarea id="incidents" name="incidents" rows="3"
                                            placeholder="Any issues or fun stories?"></textarea><br><br>

                                        <!-- Checkbox: poop -->
                                        <label>
                                            <input type="checkbox" name="poop">
                                            Did they poop? ðŸ’©
                                        </label><br><br>

                                        <!-- Other notes -->
                                        <label for="other">Other notes:</label>
                                        <textarea id="other" name="other" rows="3"
                                            placeholder="Anything else worth mentioning?"></textarea><br><br>

                                        <!-- Walker name -->
                                        <label for="walker">Walker:</label>
                                        <input type="text" id="walker" name="walker" required
                                            placeholder="e.g. Rachel" /><br><br>

                                        <!-- Submit -->
                                        <button type="submit">Submit Note</button>
                                    </form>
        </div>

        <!-- Footer partial -->
        <%- include('../partials/_footer') %>
</body>

</html>