<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Dog Walk Report</title>
    <link rel="stylesheet" href="/styles.css">

</head>

<body>
    <%- include('../partials/_header') %>

        <div class="container">
            <h1>Submit a Dog Walk Report</h1>

            <!-- error if no note written -->
            <% if (messages.error.length> 0) { %>
                <div class="error">
                    <ul>
                        <% messages.error.forEach(msg=> { %>
                            <li>
                                <%= msg %>
                            </li>
                            <% }) %>
                    </ul>
                </div>
                <% } %>

                    <!-- success message -->
                    <% if (messages.success.length> 0) { %>
                        <div class="success">
                            <% messages.success.forEach(msg=> { %>
                                <p>
                                    <%= msg %>
                                </p>
                                <% }) %>
                        </div>
                        <% } %>


                            <% if (message) { %>
                                <p class="message">
                                    <%= message %>
                                </p>
                                <% } %>


                                    <form action="/notes" method="POST" class="note-form">
                                        <label>Weather:
                                            <input type="text" name="weather" required>
                                        </label><br><br>

                                        <label>Incidents:
                                            <textarea name="incidents" rows="3"></textarea>
                                        </label><br><br>

                                        <label>
                                            <input type="checkbox" name="poop">
                                            Did they poop? ðŸ’©
                                        </label><br><br>

                                        <label>Other notes:
                                            <textarea name="other" rows="3"></textarea>
                                        </label><br><br>

                                        <label>Walker:
                                            <input type="text" name="walker" required>
                                        </label><br><br>

                                        <button type="submit">Submit Note</button>
                                    </form>
        </div>
        <%- include('../partials/_footer') %>

</body>

</html>